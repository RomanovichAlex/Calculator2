<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/equallyGreen</item>
        <item name="colorPrimaryDark">@color/material_on_background_emphasis_high_type</item>
        <item name="colorAccent">@color/material_on_primary_emphasis_high_type</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:layout_margin">@dimen/margin_button</item>
    </style>

    <style name="MyStyle" parent="AppTheme">
        <item name="android:textColor">@color/TextColorPink</item>
        <item name="android:backgroundTint">@color/ButtonColor</item>
    </style>

    <style name="MyStyle1" parent="MyStyle">
        <item name="android:textColor">@color/equallyGreen</item>
    </style>


    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#e91e63</item>
        <item name="colorPrimaryDark">#b0003a</item>
        <item name="colorAccent">#ff6090</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents">
    </style>


</resources>